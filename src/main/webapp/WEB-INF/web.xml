<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">
  <display-name>taxreportsystem</display-name>
  <!--    Main servlet-->
  <servlet>
    <servlet-name>Servlet</servlet-name>
    <servlet-class>ua.training.controller.Servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
    <url-pattern>/app/*</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class>
      ua.training.controller.listener.SessionListener
    </listener-class>
  </listener>

  <listener>
    <listener-class>
      ua.training.controller.listener.ContextListener
    </listener-class>
  </listener>


  <!--    Encoding filter-->
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>ua.training.controller.filters.EncodingFilter</filter-class>
    <init-param>
      <param-name>requestEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>responseEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
